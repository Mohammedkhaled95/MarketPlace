<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khaled.shopz.SignupActivity">


    <ImageView
        android:id="@+id/supermarket_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />


    <EditText
        android:id="@+id/owner_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="owner name"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:text="mohammed kh"
        android:layout_below="@id/supermarket_imageView"
        />

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owner_name_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="email"
        android:text="mohammed@gmail.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_editText"
        android:layout_centerVertical="true"
        android:layout_below="@id/email_editText"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="password"
        android:text="12345678"

        android:inputType="textPassword" />




    <EditText
        android:id="@+id/supernarket_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_editText"
        android:layout_alignStart="@+id/supermarket_phone_editText"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="supermarket name"
android:text="shop"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/supermarket_phone_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supernarket_name_editText"
        android:layout_marginTop="10dp"

        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="phone number"
        android:text="01154995"

        android:inputType="phone" />

    <EditText
        android:id="@+id/supermarket_location_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supermarket_phone_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="location"
android:text="egypt"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/supermarket_location_editText"
        android:text="save"

        android:layout_marginTop="10dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/supermarket_imageView"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />


</RelativeLayout>
